<!DOCTYPE html>
<html>
<head>
  <title>Counter Example</title>
</head>
<body>

<h2>Counter: <span id="counter">0</span></h2>
<button onclick="increment()">Increase</button>

<script>
  let count = 0;

  function increment() {
    count++;
    document.getElementById("counter").innerText = count;
  }
</script>

</body>
</html>
